<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/MapView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_poi"
            android:layout_weight=".3"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardMapView"
            android:text="MapView"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/MapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_poi"
            android:layout_weight=".3"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardMapFragment"
            android:text="MapFragment"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/SupportMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_poi"
            android:layout_weight=".3"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardSupportMapFragment"
            android:text="SupportMapFragment "
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/TextureMapView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_poi"
            android:layout_weight=".3"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardTextureMapView"
            android:text="TextureMapView"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/TextureMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="@drawable/btn_map_poi"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardTextureMapFragment"
            android:text="TextureMapFragment"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/TextureSupportMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="@drawable/btn_map_poi"
            android:clickable="true"
            android:gravity="center"
            android:onClick="forwardTextureSupportMapFragment"
            android:text="TextureSupportMapFragment"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>